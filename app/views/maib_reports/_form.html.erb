<div class="col-md-8">
  <%= form_for document do |f| %>
    <%= render partial: "shared/form_errors", locals: { object: document } %>

    <%= f.text_field :title, class: 'form-control' %>
    <%= f.text_area :summary, class: 'form-control short-textarea' %>
    <%= f.text_area :body, class: 'form-control' %>

    <div class="preview_button add-vertical-margins"></div>
    <div class="preview_container add-vertical-margins" style="display: none;"></div>

    <%= f.text_field :date_of_occurrence, placeholder: '2012-04-23', class: 'form-control' %>
    <%= f.select :vessel_type, f.object.facet_options(:vessel_type), {}, { class: 'select2', multiple: true, data: {placeholder: 'Select a Vessel type'} } %>
    <%= f.select :report_type, f.object.facet_options(:report_type), {}, { class: 'form-control' } %>

    <%= render partial: "specialist_documents/minor_major_update_fields", locals: { f: f, document: document } %>

    <div class="actions">
      <button name="save" class="btn btn-success">Save as draft</button>
    </div>
  <% end %>
</div>

<%= render partial: "specialist_documents/attachments_form", locals: { document: document } %>

<%= render partial: "specialist_documents/js_preview", locals: { document: document, form_namespace: "maib_report" } %>
