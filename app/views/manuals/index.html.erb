<% content_for :page_title, "Your manuals" %>
<% content_for :title, "Your manuals (#{manuals.count})" %>

<div class="row">

  <div class="sidebar col-md-3">
    <%= render "govuk_publishing_components/components/button", {
      text: "Create new manual"
    } %>
  </div>

  <div class="col-md-9 govuk-table--with-actions">
    <%= render "govuk_publishing_components/components/table", {
      label: "Your manuals",
      head: [
        {
          text: "Title"
        },
        {
          text: "State",
        },
        {
          text: "Updated at",
        },
        {
          text: if current_user_is_gds_editor?
                 "From"
                end
        },
        {
          text: "Actions",
          format: "numeric"
        }
      ],
      rows: manuals.map do |manual|
        [
          {
            text: manual.title
          },
          {
            text: manual.state
          },
          {
            text: "#{time_ago_in_words(manual.updated_at)} ago"
          },
          {
            text: if current_user_is_gds_editor?
                    link_to(manual.organisation_slug, url_for_public_org(manual.organisation_slug))
                  end
          },
          {
            text: link_to("View & Edit", manual_path(manual),class: "govuk-link"),
            format: "numeric"
          },
        ]
        end
    } %>
  </div>
</div>
