    collapse_on_mobile: true,
    breadcrumbs: [
      {
        title: "Your manuals",
        url: manuals_path
      },
      {
        title: manual.title,
        url: manual_path(manual)
      }
    ]
  } %>
<% end %>

<%= render "govuk_publishing_components/components/title", {
  title: "Edit manual #{manual.title}"
} %>

<%= render 'form', manual: manual %>
