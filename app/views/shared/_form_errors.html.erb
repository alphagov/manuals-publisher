<% if object.errors.any? %>
  <%= render "govuk_publishing_components/components/error_summary", {
    id: "error-summary",
    title: "Please fix the following errors found in the form",
    items: object.errors.map do |errors|
      {
        text: "#{errors.attribute.to_s.humanize} #{[*errors.message].join(' and ')}",
        href: "##{attribute_id_prefix}_#{errors.attribute}"
      }
    end
  } %>
<% end %>
